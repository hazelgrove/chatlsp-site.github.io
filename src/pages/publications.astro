---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Publications';
const description = 'Publications';
const permalink = `${Astro.site?.href}publications`;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="index-container">
    <div class="index-headline">
      <h1>Publications</h1>
    </div>
    <div class="papers-container">
      <table>
        <tr>
          <td>
            <div class="paper-preview-image-container">
              <picture>
                <!-- When screen is bigger than an iPhone, use the original hero image. -->
                <source srcset="/assets/static-contextualization-paper-preview.png" media="(min-width: 480px)">
                <!-- Fall back to smaller image. -->
                <!-- TODO: We need to make a smaller image. -->
                <!-- TODO: Image should have a transparent background. -->
                <img class="paper-preview-image" alt="A preview of the static contextualization paper." src="/assets/static-contextualization-paper-preview.png">
              </picture>
              <p class="caption">
                Statically Contextualizing Large Language Models with Typed Holes.
                <a href="https://dl.acm.org/doi/10.1145/3689728" target="_blank" rel="noopener">Read here!</a>
              </p>
            </div>
          </td>
          <td>
            <div class="paper-preview-image-container">
              <picture>
                <!-- When screen is bigger than an iPhone, use the original hero image. -->
                <source srcset="/assets/chatlsp-paper-preview.png" media="(min-width: 480px)">
                <!-- Fall back to smaller image. -->
                <!-- TODO: We need to make a smaller image. -->
                <!-- TODO: Image should have a transparent background. -->
                <img class="paper-preview-image" alt="A preview of the ChatLSP SRC paper." src="/assets/chatlsp-paper-preview.png">
              </picture>
              <p class="caption">
                ChatLSP: Making Language Servers Do More for Statically Contextualizing Large Language Models
                <a href="/assets/chatlsp-src-paper.pdf" target="_blank" rel="noopener">Read here!</a>
              </p>
            </div>
          </td>
        </tr>
      </table>
    </div>
  </div>
</BaseLayout>

<style>
  .container {
    text-align: justify;
    text-justify: inter-word;
  }

  .papers-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
  }

  .paper-preview-image-container {
    width: 480px;
    padding: 1rem;
  }
</style>
