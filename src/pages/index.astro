---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = 'ChatLSP';
const description = 'Extended LSP for LLM Static Contextualization';
const permalink = Astro.site?.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="index-container">
    <div class="index-headline">
      <h1>ChatLSP:<br />LSP for LLMs</h1>
      <p>We make language servers do more for statically contextualizing large language models.</p>
    </div>

    <div class="hero-image-container">
      <picture>
        <!-- When screen is bigger than an iPhone, use the original hero image. -->
        <source srcset="/assets/conversational-architecture.png" media="(min-width: 480px)">
        <!-- Fall back to smaller image. -->
        <!-- TODO: We need to make a smaller image. -->
        <!-- TODO: Image should have a transparent background. -->
        <img class="hero-image" alt="A diagram explaining the human-LLM-LS trialogue." src="/assets/conversational-architecture.png">
      </picture>
      <p class="caption">
        Illustration by
        <a href="https://andrewblinn.com" target="_blank" rel="noopener">Andrew Blinn</a>
        from the
        <a href="https://neurocy.notion.site/Future-of-Programming-Lab-241d162461a04064ae1fd9ae32bf4cb1" target="_blank" rel="noopener">Future of Programming Lab</a>
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  .index-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .index-headline {
    flex: 1;
    padding: 0 1em;
  }

  .index-headline h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .index-headline p {
    font-size: 1.4em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: .8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 750px;
    margin-bottom: 1em;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .index-container {
      flex-direction: column;
    }

    .index-headline {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
